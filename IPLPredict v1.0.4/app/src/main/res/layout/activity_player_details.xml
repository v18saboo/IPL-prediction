<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/schedulebg"
    tools:context="com.example.saboo.iplpredict.PlayerDetails">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/teamid"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:background="@color/Orange"
        android:textStyle="italic"

        android:textColor="#ffffffff"
        android:gravity="center_vertical"
        android:elevation="15dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_marginTop="15dp"
        android:id="@+id/type"
        android:background="@color/Orange"
        android:textColor="#ffffffff"
        android:gravity="center_vertical"
        android:elevation="15dp"
        android:textStyle="italic"

        android:layout_below="@+id/best"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/matches"
        android:background="@color/Orange"
        android:textColor="#ffffffff"
        android:gravity="center_vertical"
        android:elevation="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="italic"

        android:layout_below="@+id/teamid"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:background="@color/Orange"
        android:textColor="#ffffffff"
        android:gravity="center_vertical"
        android:elevation="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="italic"

        android:id="@+id/wickets"
        android:layout_below="@+id/matches"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:background="@color/Orange"
        android:textColor="#ffffffff"
        android:gravity="center_vertical"
        android:elevation="15dp"
        android:id="@+id/avg"
        android:layout_below="@+id/wickets"
        android:layout_marginTop="15dp"
        android:textStyle="italic"

        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:background="@color/Orange"
        android:textColor="#ffffffff"
        android:gravity="center_vertical"
        android:textStyle="italic"

        android:elevation="15dp"
        android:id="@+id/economy"
        android:layout_marginTop="15dp"

        android:layout_below="@+id/avg"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/Orange"
        android:textColor="#ffffffff"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:elevation="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/best"
        android:layout_below="@+id/economy"
        android:layout_alignParentStart="true" />

</RelativeLayout>
