<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saboo.iplpredict.TossActivity"
    android:background="#ff24cab2">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/button"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="134dp"
        android:textColor="#ffffffff"
        android:textColorHighlight="#ff020607"
        android:textSize="@dimen/abc_text_size_button_material"
        android:textAlignment="center"
        android:onClick="onClickButtonHome"

        android:background="@drawable/ripple_button"
        android:layout_below="@+id/tool_bar"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignStart="@+id/button"
        android:textColor="#ffffffff"
        android:layout_marginTop="55dp"
        android:textColorHighlight="#ff070204"
        android:textSize="@dimen/abc_text_size_button_material"

        android:onClick="onClickButtonAway"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ripple_button" />
</RelativeLayout>
